%h1= t('index.title')

%table.table.table-hover
  - @products.each do |product|
    %tr
      %td
        = image_tag product.photo.url(:thumb)
      %td
        %b
          = product.name
      %td= product.description
      %td= product.price
      %td= button_to t('add_to_cart'), add_to_cart_path(product_id: product.id), remote: true, class: 'btn btn-success'
      %td= link_to t('show'), product, class: 'btn btn-primary'
      %td= link_to t('edit'), edit_product_path(product), class: 'btn btn-warning'
      %td= link_to t('delete'), product, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger'
      %br
= link_to t('create_product'), new_product_path, class: 'btn btn-default'
= link_to t('all_accounts'), accounts_path, class: 'btn btn-info'  
