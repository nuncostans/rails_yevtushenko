= form_for(@product)  do |f|
  - if @product.errors.any?
    %div#error_explanation
      = error_messages_for(@product)
  .form-group
    = f.label :name
    %br
    = f.text_field :name
  .form-group
    = f.label :description
    %br
    = f.text_field :description
  .form-group
    = f.label :price
    %br
    = f.number_field :price
  .actions
    = f.submit
  
