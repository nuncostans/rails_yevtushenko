.account-new
  = form_for(@account) do |f|
    - if @account.errors.any?
      %div#error_explanation
        = error_messages_for(@account)
    .form-group
      = f.label :name
      %br
      = f.text_field :name
    .form-group
      = f.label :age
      %br
      = f.text_field :age
    .actions
      = f.submit
